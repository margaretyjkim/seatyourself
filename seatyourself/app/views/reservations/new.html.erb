<h1>New Reservation</h1>

<%= form_for(@reservation) do |f| %>

	<div class="field">
		<%= f.label :date_time %><br />
		<%= f.datetime_select :date_time %>
	</div>
	<div class="field">
		<%= f.label :number_of_guests %><br />
		<%= f.number_field :number_of_guests %>
	</div>

	<div class="actions">
		<%= f.submit %>
	</div>

<% end %>

<% link_to 'Back', reservations_path %>