<h1>Restaurants</h1>
<%= link_to "New Restaurant", new_restaurant_path %>

<% @restaurants.each do |restaurant| %>
	<p><%= restaurant.name %>, <%= restaurant.address %>, <%= restaurant.phone_number %>, <%= restaurant.type_of_cuisine %>

	<%= link_to "Book It", new_restaurant_reservation_path(restaurant) %>
	<%= link_to "Delete", restaurant_path(restaurant), method: :delete %> </p>

<% end %>